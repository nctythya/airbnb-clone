          <th scope="col">Car details</th>
          <th scope="col">Status</th>
        </tr>
      </thead>
      <tbody>
        <% @bookings.each do |booking| %>
          <%# turbo_frame_tag dom_id(booking) do %>
            <tr>
              <td scope="row"><%= booking.id %></td>
              <td scope="row"><%= booking.user.email %></td>
              <td scope="row"><%= booking.user.last_name %></td>
              <td scope="row"><%= booking.car.model %> <%= booking.car.make %></td>
              <td scope="row">
                <%= booking.status %>
                <% if booking.status == "pending" %>
                  <%= link_to 'Accept', booking_path(booking, booking: {status: 'accepted'}), data: {turbo_method: :patch} %>
                  <%= link_to 'Decline', booking_path(booking, booking: {status: 'declined'}), data: {turbo_method: :patch} %>
                <% end %>
              </td>
            </tr>
          <%# end %>
        <% end %>
      </tbody>
    </table>
